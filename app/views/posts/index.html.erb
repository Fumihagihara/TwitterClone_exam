<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><div class="alert alert-success" role="alert"><%= link_to "編集", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' } %></div></td>
    <td><div class="alert alert-danger" role="alert"><%= link_to "削除", post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></div></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく投稿する', new_post_path %>
<br>
<%= link_to 'topに戻る', root_path %>
